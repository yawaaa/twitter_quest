<% if current_user.learning?(skill) %>
  <%= form_for(current_user.skill_learnings.build) do |f| %>
    <%= hidden_field_tag :skill_id, skill.id %>
    <%= f.submit '装備', class: 'btn btn-primary btn-block' %>
  <% end %>
<% else %>
  <%= form_for(current_user.skill_learnings.build) do |f| %>
    <%= hidden_field_tag :skill_id, skill.id %>
    <%= f.submit '習得！', class: 'btn btn-success btn-block' %>
  <% end %>
<% end %>
